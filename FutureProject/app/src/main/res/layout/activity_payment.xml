<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_payment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:orientation="vertical"
   >

    <TextView
        android:id="@+id/paymentTitleBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffff"
        android:gravity="center"
         android:text="结算"
        android:textSize="22sp"
        >
    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="133.3dp"
        android:layout_marginTop="1dp"
        android:background="#fff">

        <TextView
            android:id="@+id/text_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13.3dp"
            android:text="支付金额"
            android:textColor="#898989"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/showYuE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="￥6.00"
            android:textColor="#e94b41"
            android:textSize="48dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="73.3dp"
        android:background="#f4f4f4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13.3dp"
            android:layout_marginLeft="20dp"
            android:text="选择支付方式"
            android:textColor="#000"
            android:textSize="21.3dp" />
    </RelativeLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="73.3dp"
        android:background="#fff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="29.3dp"
                android:layout_height="29.3dp"
                android:src="@drawable/balance_remainder" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/iv2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/yue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/iv2"
                    android:text="余额支付"
                    android:textColor="#323232"
                    android:textSize="21.3dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/yue"
                    android:layout_marginLeft="8dp"
                    android:text="余额支付：￥0.00"
                    android:textColor="#898989"
                    android:textSize="16dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/remainderImg"
                android:layout_width="26.7dp"
                android:layout_height="26.7dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/checkbox_selector" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="1dp"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13.3dp"
            android:layout_marginLeft="60dp"
            android:text="余额不足"
            android:textColor="#e94b41"
            android:textSize="16dp" />

        <Button
            android:id="@+id/rechargeBtn"
            android:layout_width="73.3dp"
            android:layout_height="26.7dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/solidbg"
            android:text="充值"
            android:textColor="#ffd300" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="73.3dp"
        android:layout_marginTop="15dp"
        android:background="#fff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="29.3dp"
                android:layout_height="29.3dp"
                android:src="@drawable/balance_wechat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/iv3"
                android:text="微信支付"
                android:textColor="#323232"
                android:textSize="21.3dp" />

            <ImageView
                android:id="@+id/weChatImg"
                android:layout_width="26.7dp"
                android:layout_height="26.7dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/checkbox_selector" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="73.3dp"
        android:layout_marginTop="1dp"
        android:background="#fff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/iv5"
                android:layout_width="29.3dp"
                android:layout_height="29.3dp"
                android:src="@drawable/balance_alipay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/iv5"
                android:text="支付宝支付"
                android:textColor="#323232"
                android:textSize="21.3dp" />

            <ImageView
                android:id="@+id/alipayImg"
                android:layout_width="26.7dp"
                android:layout_height="26.7dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/checkbox_selector" />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/payBtn"
        android:layout_width="466.7dp"
        android:layout_height="53.3dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="73.3dp"
        android:background="@drawable/paybtn_selector"
        android:text="确认支付"
        android:textColor="#fff"
        android:textSize="24dp" />

</LinearLayout>
