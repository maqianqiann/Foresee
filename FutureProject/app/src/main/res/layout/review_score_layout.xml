<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="173.3dp">

        <TextView
            android:id="@+id/review_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="13.3px"
            android:text="连锁门店课程大纲"
            android:textColor="#111111"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/review_TvScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/review_title"
            android:layout_marginTop="46.7dp"
            android:layout_toRightOf="@id/review_title"
            android:text="58分"
            android:textColor="#ffd300"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/review_TvPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/review_TvScore"
            android:layout_toRightOf="@id/review_title"
            android:text="不合格"
            android:textColor="#ffd300"
            android:layout_marginBottom="50px"
            android:textSize="24dp" />
    </com.zhy.autolayout.AutoRelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="#EFEFEF"
        android:layout_height="1dp" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="39px"
        android:id="@+id/course_rel"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/courseReturn"
            android:background="@drawable/solidbg"
            android:layout_width="260px"
            android:layout_height="50px"
            android:textSize="24px"
            android:textColor="#ffd300"
            android:text="返回课程"
            />
        <Button
            android:id="@+id/againBtn"
            android:background="@drawable/return_course_btn"
            android:layout_toRightOf="@id/courseReturn"
            android:layout_width="260px"
            android:layout_height="50px"
            android:textSize="24px"
            android:textColor="#ffffff"
            android:layout_marginLeft="50dp"
            android:text="再考一次"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
    <Button
        android:id="@+id/againBtn_pass"
        android:visibility="gone"
        android:background="@drawable/return_course_btn"
        android:layout_toRightOf="@id/courseReturn"
        android:layout_width="260px"
        android:layout_height="50px"
        android:layout_marginTop="40px"
        android:layout_gravity="center_horizontal"
        android:textSize="24px"
        android:textColor="#ffffff"
        android:layout_marginLeft="50dp"
        android:text="返回课程"
        />


</com.zhy.autolayout.AutoLinearLayout>